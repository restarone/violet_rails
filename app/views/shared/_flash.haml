= render 'shared/file_download'
- flash.each do |key, value|
  - unless key == 'file_url'
    -alert_class = key == 'notice' ? 'success' : 'danger'
    %div{:class => "alert alert-#{alert_class} alert-dismissible position-absolute w-100 fade show"}
      %strong
        = value
      %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}

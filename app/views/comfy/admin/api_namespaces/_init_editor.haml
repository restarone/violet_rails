- view_mode = read_only ? 'view' : 'tree'

:javascript
  // create the editor
  const container = document.getElementById("jsoneditor")
  const options = {onChange: () => { setFields() }, mode: "#{ escape_javascript(view_mode) }"}
  const editor = new JSONEditor(container, options)

  // set json
  const initialJson = {
      "Array": [1, 2, 3],
      "Boolean": true,
      "Null": null,
      "Number": 123,
      "Object": {"a": "b", "c": "d"},
      "String": "Hello World"
  }
  editor.set(initialJson)
  let existingValue = $("#api_resource_properties").val() ? $("#api_resource_properties").val() : $("#api_namespace_properties").val()

  if (existingValue) {
    let json = JSON.parse(existingValue)
    $("#api_resource_properties").val(existingValue)
    editor.set(json)
  } else {
    setFields()
  }

  function setFields() {
    str = JSON.stringify(editor.get())
    $("#api_namespace_properties").val(str)
    $("#api_resource_properties").val(str)
  }
  // get json
  const updatedJson = editor.get()
= form_for @meeting do |f|
  - if @meeting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meeting.errors.count, "error")} prohibited this meeting from being saved:"
      %ul
        - @meeting.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_time
    = f.datetime_select :start_time
  .field
    = f.label :end_time
    = f.datetime_select :end_time
  .field
    = f.label :participant_emails
    = f.text_area :participant_emails
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :timezone
    = f.text_field :timezone
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :external_meeting_id
    = f.text_field :external_meeting_id
  .actions
    = f.submit 'Save'
